
# Neon Database Connection (with connection pooling)
# Get this from your Neon project dashboard: https://console.neon.tech
# IMPORTANT: Use the POOLED connection string (ends with -pooler.neon.tech)
# This prevents "too many connections" errors
DATABASE_URL="postgresql://[user]:[password]@[endpoint]-pooler.neon.tech/[dbname]?sslmode=require"



#Public API port
PUBLIC_API_PORT=4000

# Base URL where your API (and Better Auth endpoints) will live in dev
BETTER_AUTH_URL=http://localhost:4000

# A strong secret for encryption & hashing in Better Auth
BETTER_AUTH_SECRET=YOUR-SECRET

# RevenueCat Webhook Secret (get from RevenueCat dashboard)
REVENUECAT_WEBHOOK_SECRET=your_webhook_secret_here

#R2
R2_ACCESS_KEY_ID=your_key
R2_SECRET_ACCESS_KEY=your_key
R2_ACCOUNT_ID=your_key
R2_BUCKET=your_key
R2_S3_API_URL=your_key


#RESEND
RESEND_API_KEY=your_key
