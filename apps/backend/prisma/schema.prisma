generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String  @id @default(cuid())
  name          String
  email         String  @unique
  emailVerified Boolean @default(false)
  image         String?
  locale        String? @default("en")
  pushToken     String? // Expo push notification token

  prayers     Prayer[]
  totalPoints Int?     @default(0)
  inquiries   Inquiry[]
  inquiryMessages InquiryMessage[]
  fasting     Fasting[]

  sentRequests     Friend[] @relation("user_friends")
  receivedRequests Friend[] @relation("friend_friends")

  friendGroups     FriendGroup[]       @relation("group_owner")
  groupMemberships FriendGroupMember[] @relation("group_members_user")
  onboarding       Onboarding?

  sessions Session[]
  accounts Account[]

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  @@map("user")
  @@index([email])
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@map("account")
}

model Verification {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now()) @updatedAt

  @@map("verification")
}

model Prayer {
  id      String   @id @default(cuid())
  userId  String
  date    DateTime

  fajr    Int      @default(0)
  dhuhr   Int      @default(0)
  asr     Int      @default(0)
  maghrib Int      @default(0)
  isha    Int      @default(0)
  nafl    Int      @default(0)

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, date])
  @@map("prayer")
}

model Fasting {
  id     String   @id @default(cuid())
  userId String
  date   DateTime
  fasted Boolean  @default(false)

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, date])
  @@map("fasting")
}

model FriendGroup {
  id     String @id @default(cuid())
  name   String
  userId String

  owner   User                @relation("group_owner", fields: [userId], references: [id], onDelete: Cascade)
  members FriendGroupMember[] @relation("group_members")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("friend_group")
}

model FriendGroupMember {
  id      String @id @default(cuid())
  groupId String
  userId  String

  group FriendGroup @relation("group_members", fields: [groupId], references: [id], onDelete: Cascade)
  user  User        @relation("group_members_user", fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@unique([groupId, userId])
  @@map("friend_group_member")
}

model Friend {
  id       String       @id @default(cuid())
  userId   String
  friendId String
  status   FriendStatus @default(PENDING)

  user   User @relation("user_friends", fields: [userId], references: [id], onDelete: Cascade)
  friend User @relation("friend_friends", fields: [friendId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  @@unique([userId, friendId])
  @@map("friend")
}


model Inquiry {
  id      String        @id @default(cuid())
  userId  String?
  email   String
  subject String
  status  InquiryStatus @default(OPEN)

  user     User?            @relation(fields: [userId], references: [id], onDelete: Cascade)
  messages InquiryMessage[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([email])
  @@map("inquiry")
}

model InquiryMessage {
  id         String            @id @default(cuid())
  inquiryId  String
  senderRole InquirySenderRole
  body       String
  userId     String?

  inquiry Inquiry @relation(fields: [inquiryId], references: [id], onDelete: Cascade)
  user    User?   @relation(fields: [userId], references: [id], onDelete: SetNull)

  createdAt DateTime @default(now())

  @@index([inquiryId])
  @@map("inquiry_message")
}

model Onboarding {
  id     String @id @default(cuid())
  userId String @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Step: prayer_knowledge
  prayerKnowledge String? // "yes_i_know" | "im_learning" | "no_not_yet"

  // Step: support_needed
  supportNeeded String? // "yes_i_need_support" | "some_support" | "im_good"

  // Step: learn_islam
  learnIslam String? // "quran_surahs" | "basics" | "im_good"

  // Step: why_here (multi-select stored as JSON array)
  whyHere Json? // ["pray_5_times", "track_progress", "learn_how_to_pray", "just_checking"]
  whereDidYouHearAboutUs String? // "friends" | "instagram" | "youtube" | "facebook" | "twitter" | "other"

  // Step: location_permission
  locationPermissionGranted Boolean @default(false)
  locationCity              String?
  locationTimezone          String?

  // Step: notification_permission
  notificationPermissionGranted Boolean @default(false)
  notificationPreset            String? // "gentle" | "standard" | "custom"

  // Personalization flags (derived from responses)
  enabledModules Json? // ["learn_prayer_basics", "guided_salah", "streaks", "friends", etc.]
  defaultHomeTab String? // "Learn" | "Tracker" | "Home" | "Community"

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  @@map("onboarding")
  @@index([userId])
}

enum InquiryStatus {
  OPEN
  CLOSED
}

enum InquirySenderRole {
  USER
  OWNER
}

enum FriendStatus {
  PENDING
  ACCEPTED
  REJECTED
}
