{
  "expo": {
    "name": "Noor",
    "slug": "noor-pray-tracker",
    "version": "1.0.51",
    "orientation": "portrait",
    "icon": "./assets/images/icon-light.png",
    "scheme": "noor",
    "userInterfaceStyle": "automatic",
    "owner": "salahbm_dev",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "icon": {
        "dark": "./assets/images/icon-dark.png",
        "light": "./assets/images/icon-light.png"
      },
      "bundleIdentifier": "com.noor.praytracker",
      "appleTeamId": "A2Y67UR23Z",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "UIBackgroundModes": ["remote-notification", "fetch"]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/icon-light.png",
        "backgroundColor": "#F9FAFB"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "softwareKeyboardLayoutMode": "pan",
      "permissions": [
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION"
      ],
      "package": "com.noor.praytracker"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/icon-light.png",
          "resizeMode": "cover",
          "backgroundColor": "#F9FAFB",
          "dark": {
            "image": "./assets/images/icon-dark.png",
            "backgroundColor": "#121212"
          }
        }
      ],
      [
        "expo-sensors",
        {
          "motionPermission": "Allow $(PRODUCT_NAME) to access your device motion so it can accurately track your prayer times and remind you when it's time to pray."
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow $(PRODUCT_NAME) to access your location to calculate daily prayer times and qibla direction based on your city, for example updating prayer times automatically when you travel or when the app is not open."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/images/icon-light-rounded.png",
          "color": "#ffffff",
          "defaultChannel": "default",
          "sounds": [
            "./assets/tunes/notification_sound.mp3",
            "./assets/tunes/notification_sound_other.mp3"
          ],
          "enableBackgroundRemoteNotifications": true
        }
      ],
      "expo-web-browser",
      "expo-font",
      "expo-localization"
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "locales": {
      "en": "./locales/en.json",
      "ru": "./locales/ru.json",
      "uz": "./locales/uz.json",
      "id": "./locales/id.json",
      "ms": "./locales/ms.json",
      "tr": "./locales/tr.json"
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "a3cc0051-f95d-4139-934d-27b073f49f78"
      }
    }
  }
}
