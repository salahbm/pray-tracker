{
  "expo": {
    "name": "mobile",
    "slug": "Pray Tracker",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon-light-rounded.png",
    "scheme": "mobile",
    "userInterfaceStyle": "automatic",
    "owner": "salahbm_dev",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "icon": {
        "dark": "./assets/images/icon-dark.png",
        "light": "./assets/images/icon-light.png"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/icon-light.png",
        "backgroundColor": "#F9FAFB"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/icon-light-rounded.png",
          "imageWidth": 120,
          "resizeMode": "contain",
          "backgroundColor": "#F9FAFB",
          "dark": {
            "image": "./assets/images/icon-dark-rounded.png",
            "backgroundColor": "#121212"
          }
        }
      ],
      [
        "expo-sensors",
        {
          "motionPermission": "Allow $(PRODUCT_NAME) to access your device motion"
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow $(PRODUCT_NAME) to use your location."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/images/icon-light-rounded.png",
          "color": "#ffffff",
          "defaultChannel": "default",
          "sounds": ["./assets/notification_sound.wav", "./assets/notification_sound_other.wav"],
          "enableBackgroundRemoteNotifications": true
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "locales": {
      "en": "./locales/en.json",
      "ru": "./locales/ru.json",
      "uz": "./locales/uz.json",
      "ko": "./locales/ko.json"
    },
    "extra": {
      "apiUrl": "http://192.168.200.144:4000"
    }
  }
}
