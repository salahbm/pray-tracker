{
  "extends": "@repo/typescript-config/expo",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@assets/*": ["./assets/*"],
      "@constants/*": ["./constants/*"],
      "@lib/*": ["./lib/*"],
      "@screens/*": ["./screens/*"],
      "@store/*": ["./store/*"],
      "@types/*": ["./types/*"],
      "@utils/*": ["./utils/*"],
      "@components/*": ["./components/*"],
      "@hooks/*": ["./hooks/*"],
      "@locales/*": ["./locales/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.js",
    "**/*.jsx",
    "metro.config.*",
    "babel.config.*",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "nativewind-env.d.ts"
  ],
  "exclude": ["node_modules"]
}
