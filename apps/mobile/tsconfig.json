{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@components/*": [
        "./components/*"
      ],
      "@screens/*": [
        "./screens/*"
      ],
      "@assets/*": [
        "./assets/*"
      ],
      "@hooks/*": [
        "./hooks/*"
      ],
      "@utils/*": [
        "./utils/*"
      ],
      "@types/*": [
        "./types/*"
      ],
      "@lib/*": [
        "./lib/*"
      ],
      "@store/*": [
        "./store/*"
      ],
      "types/*": [
        "./types/*"
      ],
      "@prayer/shared": [
        "../../packages/shared/src"
      ],
      "@prayer/shared/*": [
        "../../packages/shared/src/*"
      ],
      "@prayer/db": [
        "../../packages/db/src"
      ],
      "@prayer/db/*": [
        "../../packages/db/src/*"
      ]
    },
    "module": "esnext"
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "**/*.d.ts",
    "babel.config.js",
    "metro.config.js",
    "nativewind-env.d.ts"
  ]
}
