{
  "name": "pray-tracker",
  "private": true,
  "version": "1.0.0",
  "author": "Muhammad Salah",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "format:fix": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "check-types": "turbo run check-types",
    "prepare": "husky",
    "clean": "pnpm store prune && rm -rf node_modules && rm -rf .next && rm -rf .expo && rm -rf .turbo && find . -name \"node_modules\" -type d -prune -exec rm -rf {} + && rm -rf pnpm-lock.yaml",
    "android": "expo run:android",
    "ios": "expo run:ios"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,mdx,mjs,yml,yaml,css}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "expo": "~54.0.30",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-native": "0.81.5"
  },
  "devDependencies": {
    "@commitlint/cli": "20.1.0",
    "@commitlint/config-conventional": "20.0.0",
    "@eslint/js": "^9.39.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.1.0",
    "globals": "^16.5.0",
    "husky": "9.1.7",
    "lint-staged": "16.2.4",
    "prettier": "^3.7.4",
    "turbo": "^2.7.2",
    "typescript": "5.9.2",
    "typescript-eslint": "^8.48.1"
  },
  "pnpm": {
    "overrides": {
      "@types/react": "^18.3.12",
      "@types/react-dom": "^18.3.1",
      "react": "19.1.0",
      "react-dom": "19.1.0"
    }
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=20"
  }
}
